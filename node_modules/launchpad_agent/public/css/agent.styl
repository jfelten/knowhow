@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px
	
.qs-header
	.logo
		padding 10px 10px
		float left
	.serverName
		vertical-align middle
		horizontal-align middle
		float bottom
		color red
		font-size 18px
		padding-left 99px
		padding-right 15px
		padding-top 15px
		padding-bottom 0px
		
.qs-navbar
	float bottom
		
.qs-container
	float bottom
	
.log-container
	overflow-y scroll
	overflow-x scroll
	width 600px 
	height 650px
	padding-left 30px
	padding-right 15px
	padding-top 15px
	padding-bottom 15px
	color #333
	border 1
	white-space pre-wrap 
		
.qs-footer
  float top
  text-align left
  clear left
  width 100%
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  

.exec-buttons
    width 600px
    float top
    
.btn-primary
	position: relative;
    left: 415px;
	
.exec-editor
	width 600px 
	height 650px
	
	